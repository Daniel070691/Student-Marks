@model VarsityProject.ViewModels.DepartmentsViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <div class="xp - breadcrumbbar text - center">
        <h4 class="page-title">Departments</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="\Dashboard\Administrator\">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="\Departments\Index\">Departments</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </div>}
<div class="col-lg-12">
    <div class="card m-b-30">

        <div class="card-header bg-white">
            <h5 class="card-title text-black">Edit Department</h5>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Edit", "Department", FormMethod.Post, new { @id = "CreateForm", enctype = "multipart/form-data", @class = "xp-form-validate" }))
            {
                @Html.HiddenFor(model => model.Department.tid)
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label" for="val-title">Title <span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(model => model.Department.Title, new { @class = "form-control ", @id = "val-title", Name = "val-title", @placeholder = "Enter a title..." })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label" for="val-deptCode">Department Code<span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(model => model.Department.departmentCode, new { @class = "form-control ", @id = "val-deptCode", Name = "val-deptCode", @placeholder = "Enter the department code" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="\Department\Delete\@Model.Department.tid" style="float: right" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

