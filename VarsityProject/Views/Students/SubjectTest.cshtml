
@model VarsityProject.ViewModels.StudentViewModel
@{
    ViewBag.Title = "SubjectTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link href="~/assets/plugins/select2/select2.min.css" rel="stylesheet" type="text/css">

    <!-- Tagsinput CSS -->
    <link href="~/assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet" type="text/css">
    <link href="~/assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput-typeahead.css" rel="stylesheet" type="text/css">
    <style>
        #thumbnailwrapper {
            color: #2A2A2A;
            margin-right: 5px;
            border-radius: 0.2em;
            margin-bottom: 5px;
            padding: 5px;
        }

        #artiststhumbnail {
            left: 34%;
            width: 417px;
            height: 236px;
            overflow: hidden;
            border-width: thin;
            position: relative;
        }

        #genre {
            font-size: 12px;
            font-weight: bold;
            color: #2A2A2A;
        }


        #artiststhumbnail a img {
            display: block;
            margin: auto;
        }
    </style>

}
@section breadcrumb{
    <div class="xp - breadcrumbbar text - center">
        <h4 class="page-title">Students</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="\Dashboard\Lecture\">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="\Students\CourseDetails\@Model.selectedCourse.courseID">@Model.selectedCourse.courseTitle </a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.StudentSubject.subjectTitle </li>
        </ol>
    </div>}
<div class="row">
    <div class="col-lg-12">
        <h5 class="text-dark font-18 mb-3 mt-3">@Model.StudentSubject.subjectTitle Tests</h5>
    </div>
    <!-- Start XP Col -->
    <div class="col-md-12 col-lg-12 col-xl-12">
        <div class="card m-b-30">
            <div class="card-header bg-white">
                <h5 class="card-title text-black">@Model.StudentSubject.subjectTitle</h5>
                <h6 class="card-subtitle">List of all the @Model.StudentSubject.subjectTitle test(s)</h6>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-justified mb-3" id="defaultTabJustified" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="test-tab-justified" data-toggle="tab" href="#test-justified" role="tab" aria-controls="home" aria-selected="true">Test</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" id="students-tab-justified" data-toggle="tab" href="#students-justified" role="tab" aria-controls="profile" aria-selected="false">Students</a>
                        </li>*@
                </ul>
                <div class="tab-content" id="defaultTabJustifiedContent">
                    <div style="" class="tab-pane fade show active" id="test-justified" role="tabpanel" aria-labelledby="test-tab-justified">


                        @if (Model.TestList.Count > 0)
                        {
                            <div class="table-responsive">
                                <table id="xp-default-datatable" class="display table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Test title</th>
                                            <th>Test Mark</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.TestList)
                                        {
                                            <tr>
                                                <td> @Html.ActionLink(item.testTitle, "StudentTestDetails", new { id = item.testID }) </td>
                                                <td> @item.testMark </td>
                                            </tr>
                                        }
                                </table>
                            </div>
                        }
                        else
                        { 

                        <h6 style="color: red">No test(s) under this subject yet</h6>
                        <div id="thumbnailwrapper">
                            <div id="artiststhumbnail">
                                <a href="#">
                                    <!--image here-->
                                    <img src="~/assets/images/spongebod.jpg" class="img-responsive ti-layout-width-full" style="width: 100%" />
                                </a>
                            </div>
                        </div>
                        <div class="card-header bg-white">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item"><a href="#"><i class="mdi mdi-message font-24"></i>Leave a message</a></li>
                            </ul>
                        </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End XP Col -->

</div>
