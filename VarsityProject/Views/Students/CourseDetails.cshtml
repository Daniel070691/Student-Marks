@model VarsityProject.ViewModels.StudentViewModel
@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link href="~/assets/plugins/select2/select2.min.css" rel="stylesheet" type="text/css">

    <!-- Tagsinput CSS -->
    <link href="~/assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet" type="text/css">
    <link href="~/assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput-typeahead.css" rel="stylesheet" type="text/css">

}
@section breadcrumb{
    <div class="xp - breadcrumbbar text - center">
        <h4 class="page-title">Students</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="\Dashboard\Lecture\">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="\Students\MyCourses\">My Course(s)</a></li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </div>}
<div class="row">
    <div class="col-lg-12">
        <h5 class="text-dark font-18 mb-3 mt-3">My Subjects</h5>
    </div>
    <!-- Start XP Col -->
    <div class="col-md-12 col-lg-12 col-xl-12">
        <div class="card m-b-30">
            <div class="card-header bg-white">
                <h5 class="card-title text-black">@Model.selectedCourse.Title</h5>
                <h6 class="card-subtitle">Analysis section for the @Model.selectedCourse.Title subject(s)</h6>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs nav-justified mb-3" id="defaultTabJustified" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="test-tab-justified" data-toggle="tab" href="#test-justified" role="tab" aria-controls="home" aria-selected="true">Subjects</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" id="students-tab-justified" data-toggle="tab" href="#students-justified" role="tab" aria-controls="profile" aria-selected="false">Students</a>
                    </li>*@
                </ul>
                <div class="tab-content" id="defaultTabJustifiedContent">
                    <div style="" class="tab-pane fade show active" id="test-justified" role="tabpanel" aria-labelledby="test-tab-justified">


                        @if (Model.StudentSubjectList != null)
                        {
                            <div class="table-responsive">
                                <table id="xp-default-datatable" class="display table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Subject Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.StudentSubjectList)
                                        {
                                            <tr>
                                                <td> @Html.ActionLink(item.Title, "SubjectTest", new { id = item.TID }) </td>
                                            </tr>
                                        }
                                </table>
                            </div>
                        }
                        else
                        {
                            <h6 style="color: red">No subject(s) under this course yet</h6>
                            <div class="card-header bg-white">
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item"><a href="#"><i class="mdi mdi-message font-24"></i>Leave a message</a></li>
                                </ul>
                            </div>
                        }

                    </div>
                    @*<div class="tab-pane fade" id="students-justified" role="tabpanel" aria-labelledby="students-tab-justified">

                        @if (Model.SubjectStudentList != null)
                        {
                            <div class="table-responsive">
                                <table id="xp-student-datatable" class="display table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Surname</th>
                                            <th>Student No</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.SubjectStudentList)
                                        {
                                            <tr>
                                                <td> @item.Name</td>
                                                <td> @item.Surname </td>
                                                <td> @item.StudentNo </td>
                                            </tr>
                                        }

                                </table>
                            </div>
                        }
                        else
                        {
                            <h6 style="color: red">No Test under this subject yet</h6>
                        }

                    </div>*@
                </div>
            </div>
        </div>
    </div>
    <!-- End XP Col -->

</div>

