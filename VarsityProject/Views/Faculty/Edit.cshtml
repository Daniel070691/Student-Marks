@model VarsityProject.ViewModels.FacultyViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="card m-b-30">

        <div class="card-header bg-white">
            <h5 class="card-title text-black">Edit Department</h5>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Edit", "Faculty", FormMethod.Post, new { @id = "CreateForm", enctype = "multipart/form-data", @class = "xp-form-validate" }))
            {
                @Html.HiddenFor(model => model.Faculty.tid)
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label" for="val-title">Title <span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(model => model.Faculty.title, new { @class = "form-control ", @id = "val-title", Name = "val-title", @placeholder = "Enter a title..." })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label" for="val-title">Department<span class="text-danger">*</span></label>
                    <div class="col-lg-6">
                        @Html.DropDownList("departments", null, "Select a category", new { @class = "form-control col-lg-12" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="\Faculty\Delete\@Model.Faculty.tid" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

