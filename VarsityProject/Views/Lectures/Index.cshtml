@model VarsityProject.ViewModels.LectureViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/assets/plugins/select2/select2.min.css" rel="stylesheet" type="text/css">

    <!-- Tagsinput CSS -->
    <link href="~/assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet" type="text/css">
    <link href="~/assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput-typeahead.css" rel="stylesheet" type="text/css">

}
@section breadcrumb{
    <div class="xp - breadcrumbbar text - center">
        <h4 class="page-title">Subjects</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="\Dashboard\Administrator\">Dashboard</a></li>
            <li class="breadcrumb-item">Lectures</li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </div>}
<div class="row">
    <div class="col-lg-12">
        <h5 class="text-dark font-18 mb-3 mt-3">Lectures</h5>
    </div>
    <div class="col-lg-12">
        <div class="card m-b-30">

            <div class="card-header bg-white">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a href="\Lectures\Create\"><i class="mdi mdi-plus-box font-24"></i>Add a new Lecturer</a></li>
                </ul>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="xp-default-datatable" class="display table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Employee number</th>
                                <th>Email</th>
                                <th>Subject(s)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LecturerList)
                            {
                                <tr>
                                    <td>@Html.ActionLink(item.Name, "Edit", new { id = item.TID })</td>
                                    <td>@item.Surname</td>
                                    <td>@item.EmployeeNumber</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="select2 select2-container select2-container--default select2-container--below select2-container--focus" dir="ltr" data-select2-id="1" style="width: 595px;">
                                            <span class="selection">
                                                <span class="select2-selection select2-selection--multiple" role="combobox" aria-haspopup="true" aria-expanded="false" tabindex="-1" style="background-color: transparent !important;">
                                                    <ul class="select2-selection__rendered">
                                                        @foreach (var item2 in item.LectureSubjectList)
                                                        {
                                                            <li class="select2-selection__choice" title="@item2.Title" data-select2-id="13">@item2.Title</li>
                                                        }
                                                    </ul>
                                                </span>
                                            </span>
                                        </span>
                                    </td>
                                </tr>
                            }

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


